<head>
	<title><%=@name%></title>
	<meta name="google-site-verification" content="xWrWEWauf0crJRezjK3ggaV-xIyRrNvHhs4DDqRHl9o" />
	<meta HTTP-EQUIV="REFRESH" content="9; '<%= @myUrl %>'">
	<meta name="description" content="<%=@name%>">
	<meta content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" name="viewport">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js" %>
    <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-route.min.js" %>
	<%= csrf_meta_tags %>
	<script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
		ga('create', 'UA-83714284-1', 'auto');
		ga('send', 'pageview');
	</script>
	<script src="https://use.fontawesome.com/1c4f76a4d4.js"></script>
	<script src="/assets/jquery.maskedinput.js" type="text/javascript"></script>
	<meta property="og:url" content="https://primeraraiz.com/intro/<%=@product_id%>">
	<meta property="og:type" content="website">
	<meta property="og:description" content="¡Explora <%=@name%> en 3D!">
	<meta property="og:image" content="<%= @thumb %>">
	<meta property="og:image:secure_url" content="<%= @thumb %>">
	<meta property="fb:app_id" content="1716507028608244">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png">
	<link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png">
	<link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png">
	<link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png">
	<link rel="apple-touch-icon" sizes="114x114" href="/apple-icon-114x114.png">
	<link rel="apple-touch-icon" sizes="120x120" href="/apple-icon-120x120.png">
	<link rel="apple-touch-icon" sizes="144x144" href="/apple-icon-144x144.png">
	<link rel="apple-touch-icon" sizes="152x152" href="/apple-icon-152x152.png">
	<link rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png">
	<link rel="icon" type="image/png" sizes="192x192"  href="/android-icon-192x192.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
	<link rel="manifest" href="/manifest.json">
	<link rel="stylesheet" href="/assets/animate.css">
	<meta name="msapplication-TileColor" content="#ffffff">
	<meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
	<meta name="theme-color" content="#ffffff">
	<style type="text/css">
		#intro-background, #second-background{
			min-width: 960px;
			min-height: 960px;
		} 

		.intro-color{
			background-color: #424242
		}

		#intro-image{
			width:280px;
			height:200px;
			position: absolute;
		    top:0;
		    bottom: 0;
		    left: 0;
		    right: 0;
			margin: auto;
		}

		#client-image{
			width:350px;
			height:200px;
			position: absolute;
		    top:0;
		    bottom: 0;
		    left: 0;
		    right: 0;
			margin: auto;	
		}

		#client-png, #picto-hd {
			position: absolute;
		    top:0;
		    bottom: 0;
		    left: 0;
		    right: 0;
			margin: auto;	
		}

	</style>
	<script type="text/javascript">
		var ready
		
		ready = function(){
			$(document).ready(function() {
					setTimeout(function() {
						$("#intro-image").addClass("animated fadeOut")
						}, 2000);
					// setTimeout(function(data) { 
		   //  			$("#intro-background").css('background-color', "#26c6da");
					// 	},	3000); 
					setTimeout(function() { 
		    			$("#intro-background").hide();
		    			$("#second-background").show();
						},	3000); 
		  			setTimeout(function() {
		    			$("#client-image").css("display", "inline-block")
		  				}, 3500);
		  			setTimeout(function() {
		  				$("#client-png").addClass("animated fadeOut")
		  				}, 5500)
		  			setTimeout(function() {
		  				$("#picto-hd").css("display", "inline-block").delay(500).addClass("animated pulse")
		  				}, 6500) 
		  			})
				}
		$(document).ready(ready)
		$(document).on('page:load', ready)
	</script>
</head>
<body>
	<div id="intro-background" class="intro-color">
		<div id="intro-image" class="animated bounce valign-wrapper">
			<img id="primera-logo" alt="recorrido virtual Matterport México Primera Raíz" src="/assets/light_original_logo.png" class="z-depth-1" width="48px" height="48px">
			<h3 id="primera-name" class="center-align" style="display:inline-block;margin-left:10px;color:#b2ff59">primera<span style="color:white">Raíz</span></h3>
		</div>
	</div>
	<div id="second-background" style="display:none;background-color:<%=@target_color%>">
		<div id="client-image" style="display:none">
			<img id="client-png" alt="recorrido virtual Matterport México Primera Raíz" src="<%= @logoUrl %>" width="320px">
			<img id="picto-hd" style="display:none" alt="recorrido virtual Matterport México Primera Raíz" src="/assets/Picto_HD.jpg" width="300px">
		</div>
	</div>
</body>